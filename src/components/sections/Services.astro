---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "UI/UX",
    titleBottom: "Design",
    img: c1,
    alt: "UI/UX Design",
    link: "#services",
  },
  {
    index: 2,
    titleTop: "Web",
    titleBottom: "Development",
    img: c2,
    alt: "Web Development",
    link: "#services",
  },
  {
    index: 3,
    titleTop: "Digital",
    titleBottom: "Marketing",
    img: c3,
    alt: "Digital Marketing",
    link: "#services",
  },
  {
    index: 1,
    titleTop: "Mobile App",
    titleBottom: "Development",
    img: c4,
    alt: "Mobile App Development",
    link: "#services",
  },
  {
    index: 2,
    titleTop: "Cloud",
    titleBottom: "Services",
    img: c5,
    alt: "Cloud Services",
    link: "#services",
  },
  {
    index: 3,
    titleTop: "Search Engine",
    titleBottom: "Optimization",
    img: c6,
    alt: "SEO",
    link: "#services",
  },
];

const description =
  "At GUAMAC, we provide everything your business needs to thrive digitally. From stunning websites and mobile apps to AI services and digital marketing - we're your complete business solutions partner";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
